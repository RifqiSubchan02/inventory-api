generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employee {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(HRD)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Item {
  id   String @id @default(uuid())
  name String
}

model Warehouse {
  id        String   @id @default(uuid())
  name      String
  address   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  HRD
  WAREHOUSE
  FINANCE
  IT
}

