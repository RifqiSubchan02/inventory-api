{
  "name": "inventory-api",
  "version": "1.0.0",
  "main": "app.ts",
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "dev": "nodemon",
    "start": "nodemon",
    "migrate": "npx prisma migrate dev",
    "generate": "npx prisma generate",
    "build": "rimraf dist && tsc",
    "ts.check": "tsc --project tsconfig.json",
    "add-build": "git add dist",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^4.8.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^6.14.2",
    "jsonwebtoken": "^9.0.0",
    "tsconfig-paths": "^4.1.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^18.11.18",
    "@types/nodemon": "^1.19.2",
    "nodemon": "^2.0.20",
    "pre-commit": "^1.2.2",
    "prisma": "^4.8.0",
    "rimraf": "^4.1.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "ts-node -r tsconfig-paths/register ./src/app.ts",
    "ext": "ts, js"
  },
  "pre-commit": [
    "ts.check",
    "build",
    "add-build"
  ]
}
